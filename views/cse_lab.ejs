    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Fetch lab equipment counts data from the server
            fetch('/cseLabEquipmentCounts')
                .then(response => response.json())
                .then(data => {
                    const labs = data.map(entry => truncateText(entry.name, 20)); // Truncate lab names
                    const equipmentCounts = data.map(entry => entry.equipment_count);

                    // Create a new Chart instance
                    const ctx = document.getElementById('departmentProjectsChart').getContext('2d');
                    const chart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: labs, // Use truncated lab names for x-axis labels
                            datasets: [{
                                label: 'Number of Equipments',
                                data: equipmentCounts, // Use equipment counts for y-axis data
                                backgroundColor: 'rgba(0, 149, 249, 0.6)',
                                borderColor: 'rgba(54, 162, 235, 1)',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    title: {
                                        display: true,
                                        text: 'Number of Equipments'
                                    },
                                    grid: {
                                        color: 'rgba(255, 255, 255, 0.3)'
                                    }
                                },
                                x: {
                                    title: {
                                        display: true,
                                        text: 'CSE Labs'
                                    },
                                    grid: {
                                        color: 'rgba(255, 255, 255, 0.353)'
                                    }
                                }
                            },
                            plugins: {
                                legend: {
                                    labels: {
                                        color: 'rgba(255, 255, 255, 0.9)'
                                    }
                                }
                            }
                        }
                    });
                })
                .catch(error => {
                    console.error('Error fetching lab equipment counts:', error);
                });
        });

        // Function to truncate text to a specified length
        function truncateText(text, maxLength) {
            return text.length > maxLength ? text.substring(0, maxLength) + '...' : text;
        }





        const setup = () => {
            const getTheme = () => {
                if (window.localStorage.getItem('dark')) {
                    return JSON.parse(window.localStorage.getItem('dark'))
                }
                return !!window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches
            }

            const setTheme = (value) => {
                window.localStorage.setItem('dark', value)
            }

            return {
                loading: true,
                isDark: getTheme(),
                toggleTheme() {
                    this.isDark = !this.isDark
                    setTheme(this.isDark)
                },
            }
        }
    </script>

